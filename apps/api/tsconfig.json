{
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "incremental": false,
    "outDir": "build",
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true },
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "typescript-transform-paths/register",
      "tsconfig-paths/register"
    ]
  },
}
